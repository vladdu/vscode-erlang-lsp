{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "sourceMap": true,
        "noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictFunctionTypes": true,
        "strictPropertyInitialization": true
    },
    "exclude": [
        "out",
        "node_modules",
        ".vscode-test",
        "tmp"
    ]
}